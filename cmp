#!/bin/bash
for pl in *.pl ; do
    py=${pl%l}y
    n=${pl%[ab]*}
    if [[ ! -x $py ]] ; then
        echo Cannot run $py >&2
        continue
    fi

    if [[ -f $n.in ]] ; then
        if diff -u <($pl $n.in) <($py $n.in) ; then
            echo ${pl%.pl} âœ“
        fi
    else
        echo $n.in not found >&2
    fi
done
